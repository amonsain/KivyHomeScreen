
<MainLayout>:
	orientation: 'vertical'
	canvas.before:
        Color:
            rgba: 0.6, 0.6, 0.6, 1
        Line: 
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1
	BoxLayout:
		size_hint:1,0.1
	BoxLayout:
		size_hint:1,0.9
		canvas.before:
        	Color:
            	rgba: 0.6, 0.6, 0.6, 1
        	Line: 
            	rectangle: self.x+1,self.y+1,self.width-1,self.height-1
		TrafficCurrent:
            size_hint:2,1
			orientation:'vertical'
            start:'Toulouse'
            destination:'Colomiers'
			canvas.before:
        		Color:
            		rgba: 0.6, 0.6, 0.6, 1
        		Line: 
            		rectangle: self.x+1,self.y+1,self.width-1,self.height-1
		