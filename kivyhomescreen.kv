#:import WipeTransition kivy.uix.screenmanager.WipeTransition

MyScreenManager:
    transition: WipeTransition()
<RadioScreen>:
    name:'RadioScreen'
    BoxLayout:
        orientation:'vertical'
        canvas:
            Color:
                rgb:[0.7,0.7,0.7]
            Rectangle:
                pos: self.pos
                size: self.size
        ClockButton:
            size_hint:1,0.1
            background_color:[0.1,0.6,0.6,1]
            on_release: 
                root.manager.transition= WipeTransition()
                root.manager.transition.duration = 1
                root.manager.current = root.manager.next()
        BoxLayout:
            size_hint:1,0.9  
            orientation:'horizontal'
            BoxLayout:
                size_hint:0.8,1  
                orientation: 'vertical'
                RadioButton:
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 1
                        Line: 
                            rectangle: self.x+2,self.y+2,self.width-2,self.height-2
                    stationid: 1
                    stationname:'France Inter'
                    textcolor:[0.91,0,0.18,1]   
                RadioButton:
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 1
                        Line: 
                            rectangle: self.x+2,self.y+2,self.width-2,self.height-2
                    stationname:'France Info'
                    stationid: 2
                    textcolor:[1,0.95,0,1]
                RadioButton:
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 1
                        Line: 
                            rectangle: self.x+2,self.y+2,self.width-2,self.height-2
                    stationname:'France Culture'
                    stationid: 3
                    textcolor:[0.39,0.11,0.51,1]
                RadioButton:
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 1
                        Line: 
                            rectangle: self.x+2,self.y+2,self.width-2,self.height-2
                    stationname:'France Musique'
                    stationid: 4
                    textcolor:[0.63,0,0.22,1] 
                RadioButton:
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 1
                        Line: 
                            rectangle: self.x+2,self.y+2,self.width-2,self.height-2
                    stationname:'FIP'
                    stationid: 5
                    textcolor:[0.91,0,0.22,1]     
            BoxLayout:
                orientation:'vertical'
                size_hint:0.2,1
                canvas.after:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line: 
                        rectangle: self.x+2,self.y+2,self.width-2,self.height-2
                VolumeSlider:
                    id: VolumeSlider
                    orientation:'vertical'
                    size_hint:1,0.85
                    canvas.after:
                        Rectangle:
                            pos:self.center_x-75, self.value_pos[1]-75
                            size: (sp(150), sp(150))
                            source:'./images/VolumeButton.png'
                Label:
                    text: '[b]'+'Volume %s' % int(VolumeSlider.value)+'[/b]' if VolumeSlider.value else '[b]'+'OFF'+'[/b]' 
                    markup:True
                    size_hint:1,0.15
                    color: [1,1,1,1] 
<WeatherScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgb:[1,1,1]
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint:1,0.1  
            ClockButton:              
                on_release: 
                    root.manager.transition= WipeTransition()
                    root.manager.transition.duration = 1
                    root.manager.current = root.manager.next() 
                    root.manager.delayedswitch() 
        BoxLayout:
            size_hint:1,0.9
            canvas.before:
                Color:
                    rgba: 0.6, 0.6, 0.6, 1
                Line: 
                    rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            WeatherCurrent:
                size_hint:2,1
                orientation:'vertical'
                canvas.before:
                    Color:
                        rgba: 0.6, 0.6, 0.6, 1
                    Line: 
                        rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            WeatherDay:
                orientation:'vertical'
                dayid:0
                canvas.before:
                    Color:
                        rgba: 0.6, 0.6, 0.6, 1
                    Line: 
                        rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            WeatherDay:
